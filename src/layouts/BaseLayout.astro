---
import '../styles/global.css';
import { languages } from '../i18n/ui';

interface Props {
  title?: string;
  description?: string;
  coverImage?: string;
  lang?: string;
}

const {
  title = 'Marek Dolníček — React & TypeScript Developer',
  description = 'Enterprise React developer building scalable internal portals and mission-critical applications with TypeScript, Material UI, and modern web technologies.',
  coverImage = '/social.png',
  lang: explicitLang
} = Astro.props as Props;

// Derive the language from props or URL so localized pages get the correct html lang
const urlLang = Astro.url.pathname.split('/')[1];
const lang = explicitLang || (urlLang && urlLang in languages ? urlLang : 'en');
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={coverImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen px-6 pb-16 pt-6 text-base text-slate-100 sm:px-10 lg:px-16">
    <!-- Navigation Header -->
    <div class="mx-auto flex max-w-6xl items-center justify-between pb-6">
      <slot name="navigation">
        <!-- Default: empty, can be filled by pages that want the navbar -->
      </slot>
      <slot name="language-switcher">
        <!-- Default: empty, can be filled by pages that want the switcher -->
      </slot>
    </div>

    <main class="mx-auto flex max-w-6xl flex-col gap-12">
      <slot />
    </main>
  </body>
</html>
