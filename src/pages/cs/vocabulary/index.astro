---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { useTranslations } from '../../../i18n/ui';

const lang = 'cs';
const t = useTranslations(lang);

const vocabularyTerms = [
  { slug: 'enterprise-react-developer', title: 'Enterprise React vývojář', description: 'Frontend specialista na velké React aplikace s důrazem na kvalitu, bezpečnost a spolupráci s enterprise týmy.', category: 'Role & expertiza' },
  { slug: 'internal-portal-development', title: 'Vývoj interních portálů', description: 'Webové aplikace pro zaměstnance, které zefektivní provoz, zpřístupní data a sjednotí workflow.', category: 'Služby' },
  { slug: 'material-ui-design-system', title: 'Material UI design systém', description: 'Upravená implementace Material Designu v MUI s napojením na firemní brand a přístupnost.', category: 'UI & Design' },
  { slug: 'react-typescript', title: 'React + TypeScript', description: 'Staticky typované React aplikace s důrazem na odhalení chyb v build fázi a udržovatelnost kódu.', category: 'Technologie' },
  { slug: 'redux-state-management', title: 'Redux správa stavu', description: 'Prediktabilní centrální stav vhodný pro složité enterprise aplikace s jasnými datovými toky.', category: 'Správa stavu' },
  { slug: 'zustand-state-management', title: 'Zustand správa stavu', description: 'Lehká hooks knihovna bez boilerplate, ideální pro feature-specifický stav nebo jednodušší náhradu Reduxu.', category: 'Správa stavu' },
  { slug: 'nextjs-enterprise', title: 'Next.js pro enterprise', description: 'React framework se SSR/SSG a API routami pro rychlé a SEO-friendly enterprise aplikace.', category: 'Frameworky' },
  { slug: 'gatsby-graphql', title: 'Gatsby + GraphQL', description: 'Statické generování s GraphQL vrstvou, vhodné pro dokumentační portály a obsahově bohaté weby.', category: 'Frameworky' },
  { slug: 'graphql-integration', title: 'GraphQL integrace', description: 'Dotazovací jazyk, který vrací přesně potřebná data a snižuje přenosy mezi frontendem a API.', category: 'Backend integrace' },
  { slug: 'postgresql-react', title: 'PostgreSQL + React', description: 'Napojení React frontendů na relační databázi přes REST nebo GraphQL API.', category: 'Backend integrace' },
  { slug: 'mongodb-react-dashboard', title: 'MongoDB React dashboard', description: 'Real-time analytické dashboardy nad flexibilním schématem MongoDB s React UI.', category: 'Backend integrace' },
  { slug: 'react-hook-form', title: 'React Hook Form', description: 'Výkonná knihovna pro formuláře s neřízenými komponentami a komplexní validací.', category: 'Formuláře & validace' },
  { slug: 'formik-multistep-forms', title: 'Formik vícekrokové formuláře', description: 'Deklarativní tvorba vícekrokových wizardů s validací přes Yup v enterprise aplikacích.', category: 'Formuláře & validace' },
  { slug: 'docker-github-actions-cicd', title: 'Docker + GitHub Actions CI/CD', description: 'Automatizované pipeline s Dockerem a GitHub Actions pro build, test a nasazení.', category: 'DevOps' },
  { slug: 'playwright-testing', title: 'Playwright testování', description: 'E2E testování v prohlížečích s auto-waitem a kvalitativními bránami v CI.', category: 'Testování & kvalita' },
  { slug: 'enterprise-portal-architecture', title: 'Architektura enterprise portálů', description: 'Vzory pro škálovatelnost, bezpečnost, udržitelnost a týmovou spolupráci ve velkých React projektech.', category: 'Architektura' }
];

const categories = Array.from(new Set(vocabularyTerms.map((t) => t.category)));
---

<BaseLayout
  lang={lang}
  title="Technický slovník | Enterprise React"
  description="Slovník termínů a technologií používaných při tvorbě enterprise React portálů a interních aplikací."
>
  <article class="mx-auto max-w-5xl space-y-8">
    <nav aria-label="Breadcrumb" class="text-sm text-slate-400">
      <a href={`/${lang}`} class="hover:text-accent">{t('nav.home')}</a> → <span class="text-slate-200">{t('nav.vocabulary')}</span>
    </nav>

    <header class="space-y-4">
      <h1 class="text-4xl font-bold text-white sm:text-5xl">{t('vocabulary.technicalVocabulary')}</h1>
      <p class="text-xl text-slate-200">
        Přehled technologií, vzorů a pojmů, které používám při stavbě interních portálů a enterprise aplikací.
      </p>
    </header>

    <div class="rounded-2xl border border-accent/30 bg-accent/10 p-6">
      <p class="text-lg text-slate-100">
        Každý termín odkazuje na detailní stránku s příklady z projektů pro O2 Czech Republic, TESCO Stores CZ, MONETA Auto, České dráhy a JABLOTRON GROUP.
      </p>
    </div>

    {categories.map((category) => (
      <section class="space-y-4">
        <h2 class="text-2xl font-semibold text-white">{category}</h2>
        <div class="grid gap-4 sm:grid-cols-2">
          {vocabularyTerms
            .filter((term) => term.category === category)
            .map((term) => (
              <a
                href={`/${lang}/vocabulary/${term.slug}`}
                class="block rounded-2xl border border-white/10 bg-white/5 p-5 transition hover:border-accent/30 hover:bg-white/10"
              >
                <h3 class="text-lg font-semibold text-accent">{term.title}</h3>
                <p class="mt-2 text-sm text-slate-300">{term.description}</p>
                <span class="mt-3 inline-block text-sm font-semibold text-accent">
                  Číst detail →
                </span>
              </a>
            ))}
        </div>
      </section>
    ))}

    <section class="rounded-2xl border border-accent/30 bg-accent/5 p-6 text-center">
      <h2 class="text-2xl font-semibold text-white">Potřebujete detailnější konzultaci?</h2>
      <p class="mt-3 text-slate-200">
        Mohu připravit architekturu, proof-of-concept nebo audit k libovolnému pojmu z tohoto slovníku.
      </p>
      <a href="mailto:marekdolnicek@gmail.com" class="mt-4 inline-block rounded-full bg-accent px-8 py-3 font-semibold text-ink transition hover:bg-accentMuted">
        Kontaktujte mě
      </a>
    </section>
  </article>
</BaseLayout>
